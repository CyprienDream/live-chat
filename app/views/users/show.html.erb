<h1>Show page of user <%= @user.username %></h1>
<h2>email: <%= @user.email %></h2>

<h3>Your chatrooms</h3>
<br>
<% if @previews.empty? %>
  <h4>You don't seem to have any friends...</h4>
<% else %>
  <% @previews.each do |prev|%>
    <%= "----------" %>
      <%= link_to prev[:user].username, chatroom_path(prev[:room]) %>
      <%= prev[:last_message] %>
    <%= "----------" %>
  <% end %>
<% end %>
